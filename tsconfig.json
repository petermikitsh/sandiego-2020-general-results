{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "target": "es5",
    "outDir": "dist",
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "strict": true,
    "preserveWatchOutput": true,
    "downlevelIteration": true
  },
  "include": ["src"]
}
